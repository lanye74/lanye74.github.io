{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",

		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		"lib": ["ESNext", "DOM"],

		"forceConsistentCasingInFileNames": true,

		"rootDir": "./src",
		"outDir": "./js"
	},

	"include": ["./src"]
}
