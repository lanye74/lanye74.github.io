{
	"compilerOptions": {
		"lib": ["DOM", "ESNext"],
		"target": "ESNext",
		"watch": true,

		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		"forceConsistentCasingInFileNames": true,

		"removeComments": false,

		"rootDir": "./ts",
		"outDir": "./js"
	},

	"include": ["./ts"]
}